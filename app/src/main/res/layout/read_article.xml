<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_read_acticle">

    <io.xujiaji.hnbc.widget.MarkdownPreviewView
        android:id="@+id/markdownView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="520dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/comment_area"
        android:textColor="@color/text_color_level_3"
        android:textSize="@dimen/text_size_level6"
        android:background="@drawable/shape_comment_info_bg"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollHorizontally="false"
        android:paddingBottom="48dp"/>
</LinearLayout>